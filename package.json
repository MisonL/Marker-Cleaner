{
  "name": "marker-cleaner",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun --watch run src/index.tsx",
    "build": "bun run build:mac && bun run build:win && bun run build:linux",
    "build:mac": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --external=sharp --outfile=dist/marker-cleaner-macos",
    "build:mac-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --external=sharp --outfile=dist/marker-cleaner-macos-x64",
    "build:win": "bun build src/index.tsx --compile --target=bun-windows-x64 --external=sharp --outfile=dist/marker-cleaner-win.exe",
    "build:linux": "bun build src/index.tsx --compile --target=bun-linux-x64 --external=sharp --outfile=dist/marker-cleaner-linux"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "meow": "^14.0.0",
    "open": "^11.0.0",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/react": "^19.0.0",
    "typescript": "^5.9.3"
  }
}
